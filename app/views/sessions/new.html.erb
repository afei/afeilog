<div id="login">

	<%= form_tag( 'login',    class: "form-signin" ) do %>
		<h3 class="form-signin-heading"><%= t('.title') %></h3>
		<%= label_tag :name, t('.name') , class: "sr-only" %>
		<%= text_field_tag :name, params[:name], class: "form-control", placeholder: t('.name') %>
		<%= label_tag :password, t('.password') , class: "sr-only" %>
		<%= password_field_tag :password, params[:password], class: "form-control", placeholder: t('.password') %>
		<%= submit_tag t('.login') , class: "btn btn-primary btn-block btn-lg" %>
		<% if flash[:alert] %>
			<div class="alert alert-warning alert-dismissible">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<%= flash[:alert] %>
			</div>
		<% end %>
	<% end %>
</div>
