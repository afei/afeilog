<div>
	<% if flash[:alert] %>
		<p><%= flash[:alert] %></p>
	<% end %>

	<%= form_tag( 'login',    class: "form-horizontal" ) do %>
		<div class="form-group">
			<%= label_tag :name, 'Name:' , class: "control-label col-sm-2" %>
			<div class="col-sm-4">
				<%= text_field_tag :name, params[:name], class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= label_tag :password, 'Password:', class: "control-label col-sm-2" %>
			<div class="col-sm-4">
				<%= password_field_tag :password, params[:password], class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-4">
				<%= submit_tag "Login", class: "btn btn-default" %>
			</div>
		</div>
	<% end %>
</div>
