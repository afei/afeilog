<div>
	<% if flash[:alert] %>
		<div class="alert alert-warning alert-dismissible">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
			<%= flash[:alert] %>
		</div>
	<% end %>

	<%= form_tag( 'login',    class: "form-horizontal" ) do %>
		<div class="form-group">
			<%= label_tag :name, t('.name') , class: "control-label col-sm-2" %>
			<div class="col-sm-4">
				<%= text_field_tag :name, params[:name], class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= label_tag :password, t('.password') , class: "control-label col-sm-2" %>
			<div class="col-sm-4">
				<%= password_field_tag :password, params[:password], class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-4">
				<%= submit_tag t('.login') , class: "btn btn-default" %>
			</div>
		</div>
	<% end %>
</div>
