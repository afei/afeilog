<%= form_tag devices_path, method: :get, class: 'form-inline' do %>
	<div class="form-group">
		<%= text_field_tag :search, params[:search], {class: 'form-control monthpicker'} %>
		<%= submit_tag 'Search', name: nil, class: 'btn btn-default' %>
	</div>
<% end %>

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>


<table class="table">
  <thead>
    <tr>
      <th>Device code</th>
      <th>Serial no</th>
      <th>Model no</th>
      <th>Manufacturer</th>
      <th>First use date</th>
      <th>Verify date</th>
      <th>Company</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.device_code %></td>
        <td><%= device.serial_no %></td>
        <td><%= device.model_no %></td>
        <td><%= device.manufacturer %></td>
        <td><%= device.first_use_date %></td>
        <td><%= device.verify_date %></td>
        <td><%= device.company.name %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Device', new_device_path %>
