<%= form_for(@company, html:{class: "form-horizontal"}) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :code, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
    <%= f.text_field :code, class:"form-control" %>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
    <%= f.text_field :name, class:"form-control" %>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :area, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.select :area, Company::AREAS, { prompt: 'Select an area' }, { class: "form-control" }  %>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
    <%= f.text_area :address, class:"form-control" %>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :contacter, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
    <%= f.text_field :contacter, class:"form-control" %>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :contact_number, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
    <%= f.text_field :contact_number, class:"form-control" %>
		</div>
  </div>
  <div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<%= f.submit nil,  class: "btn btn-default"  %>
		</div>
  </div>
<% end %>
