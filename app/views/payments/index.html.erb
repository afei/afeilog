<h1>Listing Payments</h1>

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>


<table class="table">
    <tr>
      <th>Pay day</th>
      <th>Pay amount</th>
      <th>Contract no</th>
      <th>Contract</th>
      <th colspan="3"></th>
    </tr>

    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.pay_day %></td>
        <td><%= payment.pay_amount %></td>
        <td><%= payment.contract_no %></td>
        <td><%= payment.contract.company.name %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
